html
  head
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')

body
include nav.pug
.container-fluid
  h1 Hello
  p
    | Welcome to
  form.form-inline.md-form.mr-auto.mb-4(action='/users/seach', method='GET')
    input.form-control.mr-sm-2(name='q', type='text', placeholder='Search', aria-label='Search')
    button.btn.aqua-gradient.btn-rounded.btn-sm.my-0.btn.btn-primary(type='submit') Search
  table.table
    thead
      tr
        th Avatar
        th Name
        th Phone
        th Actions
    tbody.container-fluid
    each user in users
      tr
        td
          img(src=user.avatar,width="64")
        td= user.name
        td=user.phone
        td
          a.btn.btn-primary(href='/users/' + user.id) View
  a.btn.btn-primary(href='/users/create') New Create
  a.btn.btn-primary(href='/transfer/create') Transfer
