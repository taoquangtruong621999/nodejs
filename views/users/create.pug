html
  head
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
    link(rel="stylesheet", href="/styles/custom.css")
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')

body
.container-fluid
include nav.pug
if errors
    each error in errors
      .alert.alert-danger= error
.row.p-3
  .col-4.border.border-primary.rounded.mt-2.p-3
    form(action='/users/create', method='POST')
      .form-group
        label(for='name') Name
        input#exampleInputEmail1.form-control(type='name', value=values ? values.name : "", aria-describedby='emailHelp', name='name')
      .form-group
        label(for='phone') Phone
        input#exampleInputPassword1.form-control(type='phone', name='phone',value=values ? values.phone : "")
      button.btn.btn-primary(type='submit') Submit


      
